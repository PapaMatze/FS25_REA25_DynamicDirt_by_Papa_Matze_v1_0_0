<CustomShader version="5">
    <Parameters>
        <!-- etwas stärkere, schnellere Strukturbewegung -->
        <Parameter name="bumpSpeedScale"
                   target="bumpSpeedScale"
                   group="base"
                   type="float3"
                   defaultValue ="-1.2 -4.5 0.03 1"/>

        <!-- leicht kräftigere Farbe -->
        <Parameter name="underwaterFogColor"
                   target="underwaterFogColor"
                   group="base"
                   type="float4"
                   defaultValue ="0.18 0.12 0.15 0.13"/>

        <!-- minimal mehr „Wind“ / Bewegung -->
        <Parameter name="windScale"
                   target="windScale"
                   group="base"
                   type="float"
                   defaultValue ="0.035"
                   minValue="0"
                   maxValue="0.07"/>

        <!-- stärkere Verzerrung / Fluss -->
        <Parameter name="uvScaleSpeedDistort"
                   target="uvScaleSpeedDistort"
                   group="flowMap"
                   type="float4"
                   defaultValue ="0.6 12 1.4 0.7"/>

        <!-- **Shader-Boost für Tiefe**: hier wird es optisch „tiefer“ -->
        <Parameter name="depthScale"
                   target="depthScale"
                   group="base"
                   type="float"
                   defaultValue ="14.0"
                   minValue="5"
                   maxValue="20"/>
    </Parameters>
    <!-- der Rest deiner Datei bleibt wie gehabt -->
    ...
</CustomShader>
